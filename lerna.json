{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.md"]
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish"
    }
  }
}
