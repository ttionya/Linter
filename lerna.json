{
  "$schema": "https://raw.githubusercontent.com/lerna/lerna/main/core/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "preid": "beta"
    },
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": ["*.md"]
}
