{
  "extends": "@ttionya/tsconfig/tsconfig.node.json",

  "ts-node": {
    "swc": true
  },

  "compilerOptions": {
    "noEmit": true,

    "allowJs": true,

    "lib": ["ES2022"],

    "baseUrl": ".",
    "paths": {
      "@ttionya/eslint-config/*": ["./packages/eslint-config/*"]
    },
    "typeRoots": ["./node_modules/@types", "./packages/eslint-config/typings"]
  },

  "include": ["./packages/**/*"]
}
